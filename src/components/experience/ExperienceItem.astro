---
interface Props {
  position: string
  company: string
  date: string
  responsabilities?: string[]
  accomplishments?: string[]
}

const { position, company, responsabilities, accomplishments, date } =
  Astro.props
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
>
</div>
<time
  class="mb-1 text-md font-normal leading-none text-sky-800 dark:text-sky-200/80"
  >{date}</time
>
<h3 class="text-lg font-semibold text-teal-700 dark:text-teal-300 mt-2">
  {position}
  <span class="font-light">{company}</span>
</h3>

<div>
  <h2 class="mx-4 text-amber-700 dark:text-amber-200 text-lg font-bold mt-2">
    Responsabilidades
  </h2>
  <ul style={{ listStyle: "disc" }}>
    {responsabilities?.map(elem => <li class="mx-10"> {elem} </li>)}
  </ul>
  <br />
  <h2 class="mx-4 text-amber-700 dark:text-amber-200 text-lg font-bold mt-2">
    Logros Destacables
  </h2>
  <ul style={{ listStyle: "disc" }}>
    {accomplishments?.map(elem => <li class="mx-10"> {elem} </li>)}
  </ul>
</div>
